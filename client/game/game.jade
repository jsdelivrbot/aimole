script
	include:coffee-script gameController.coffee
script(type="text/ng-template", id="views/game")
	div(aimole-header)
	.container-fuild#game-view
		.row
			.col-md-6
				.panel.panel-default(fill-height additional-padding="100")
					.message-text.text-danger(ng-if="gameMsg.errorMessage") {{gameMsg.errorMessage}}
					iframe(ng-if="iframeUrl" ng-src="{{iframeUrl}}" width="100%" height="100%")
			.col-md-6
				.panel.panel-default(fill-height additional-padding="100")
					.panel-body
						.row
							p
								.col-sm-6
									strong {{game.name}}
								.col-sm-6
									.text-right
										a(ng-href="https://github.com/ajaxorg/ace/wiki/Default-Keyboard-Shortcuts" target="_blank") Editor Hotkeys
					div(fill-height additional-padding="100" footer-element-id="submit-btn-toolbar")
						aimole-editor(local-storage-key="codeLocalStorageKey" editor-options="codeAceOptions" language="c" ng-model="code")
					.panel-footer.clearfix#submit-btn-toolbar
						.pull-left
							.message-text.text-danger(ng-if="gameRunMsg.errorMessage") {{gameRunMsg.errorMessage}}
							.message-text.text-success(ng-if="gameRunMsg.successMessage") {{gameRunMsg.successMessage}}
						.btn-toolbar.pull-right
							button.btn.btn-default(type="button" ng-click="run()" ng-disabled="gameRunMsg.successMessage == 'Running...'") Run
							//- button.btn.btn-primary(type="button" ng-click="submit()" ng-disabled="true") Submit
